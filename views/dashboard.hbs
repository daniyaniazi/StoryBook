<h3>Welcome to your Dashboard {{name}}</h3>
<p>
    Here are your stories
</p>

{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td>
                <a href="/stories/{{_d}}">{{title}}</a>
            </td>
            <td>
                {{createdAt}}
            </td>
            <td>
                <span class="dash-status">
                    {{status}}
                </span>
            </td>
            <td></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories</p>

{{/if}}